{
  "name": "requeue-saas",
  "version": "1.0.0",
  "description": "ReQueue SaaS - Production-ready API-First Queue Management Platform",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "build": "npm run build:dashboard && npm run build:api",
    "build:dashboard": "cd dashboard/frontend && npm run build",
    "build:api": "echo 'API build complete'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/"
  },
  "keywords": [
    "queue",
    "redis",
    "saas",
    "api",
    "multi-tenant",
    "enterprise"
  ],
  "author": "ndekesyiri",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "stripe": "^14.7.0",
    "prometheus-client": "^15.0.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "dotenv": "^16.3.1",
    "express-async-errors": "^3.1.1",
    "redis": "^4.6.10",
    "bull": "^4.12.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "aws-sdk": "^2.1490.0",
    "google-cloud": "^0.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
